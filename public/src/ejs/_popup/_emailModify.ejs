<section id="emailModify" class="popup">
    <header class="popup__header">
        <h3 class="popup__tit">이메일 주소 수정</h3>
        <button class="popup__close js-popup-close">close</button>
    </header>
    <section class="popup__body">
        <div class="wrap emailModify-wrap">
            <div class="emailModify-list">
                <div class="email-box__field">
                    <input type="text" class="input-v1" placeholder="내용을 입력하세요">
                    <div class="email-box__select">
                        <select name="" id="" class="form__select js-placeholder is-check">
                            <option value="0">직접입력</option>
                            <option value="1">@naver.com</option>
                        </select>
                    </div>
                </div>
            </div>
            <a class="popup-confirm__link js-popup-open" href="#emailModifyResult">인증메일 발송</a>
        </div>
    </section>
</section>
